<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aldair.contactos.Perfil">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perfil del contacto"
        android:gravity="center"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/retrato"
            android:id="@+id/ivPerfilImagen"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/lbTituloNombre"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jojanny"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:id="@+id/lbNombre"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TelÃ©fono:"
            android:paddingLeft="22dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/lbTituloNumero"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="687159797"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:id="@+id/lbNumero"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:paddingLeft="22dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/lbTituloEmail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jojanny23@gmail.com"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:id="@+id/lbEmail"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/telefono"
        android:layout_gravity="center"
        android:id="@+id/ivLlamar"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sobre"
        android:layout_gravity="center"
        android:id="@+id/ivMensaje"
        android:layout_marginLeft="20dp"/>
     <ImageView
         android:layout_width="60dp"
         android:layout_height="53dp"
         android:src="@drawable/emailsobre"
         android:layout_marginLeft="20dp"
         android:id="@+id/ivEmail"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_gravity="center"
        android:id="@+id/btnRegresar"
        android:layout_marginLeft="20dp"/>

    </LinearLayout>
</LinearLayout>
